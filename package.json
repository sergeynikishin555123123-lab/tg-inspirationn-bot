{
  "name": "tg-inspiration-bot",
  "version": "12.0.0",
  "description": "Telegram bot with Mini App for inspiration workshop - Pure JavaScript Version",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "restart": "pkill -f \"node server.js\" || true && sleep 2 && node server.js",
    "force-restart": "fuser -k 3000/tcp || true && sleep 2 && node server.js",
    "status": "ps aux | grep \"node server.js\" || echo \"Сервер не запущен\"",
    "test": "echo \"No tests specified\" && exit 0",
    "deploy": "node server.js",
    "db:init": "node -e \"import('./server.js').then(() => console.log('Database initialized'))\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.64.0",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "telegram",
    "bot",
    "mini-app",
    "javascript",
    "inspiration"
  ],
  "author": "Мастерская Вдохновения",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
